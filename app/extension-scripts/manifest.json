{
  "manifest_version": 2,
  "name": "Destiny Raid Status",
  "version": "2.1.0",
  "description": "Easily check raid status of Destiny player(s)",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "short_name": "DRS",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "*://127.0.0.1/*",
    "*://*.destinyraidstatus.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://127.0.0.1/*",
        "*://*.destinyraidstatus.com/*"
      ],
      "js": [
        "content-destinyraidstatus.js"
      ]
    },
    {
      "matches": [
        "*://*.destinylfg.net/*"
      ],
      "js": [
        "content-destinylfg.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "incognito": "split",
  "offline_enabled": false,
  "minimum_chrome_version": "51",
  "web_accessible_resources": [
    "icon16.png"
  ]
}